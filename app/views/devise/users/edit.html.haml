#account-page.account-page
  .hidden_image
    = image_tag("No1@2x.png")
    ＊1 目指してます
  .hidden_btn
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", '#', class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-image
          プロフィール画像：
            = f.file_field :image
        .field
          .field-label
            = f.label :introduction
          .field-input.introduction 
            = f.text_field :introduction
        .actions
          = f.submit "Update", class: 'btn'
