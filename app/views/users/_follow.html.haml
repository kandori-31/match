- if current_user.follower?(@user)
      = form_for(current_user.relationships.build) do |f|
            = f.hidden_field :follow_id, value: @user.id
            = f.submit 'いいね!', class: 'follows', id:'follow'
-else
      = form_for(current_user.relationships.build) do |f|
            = f.hidden_field :follow_id, value: @user.id
            = f.submit 'いいね!', class: 'follows'